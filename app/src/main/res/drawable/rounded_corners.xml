<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/> <!-- Adjust the radius as needed -->
            <solid android:color="#FFFFFF"/> <!-- Background color if needed -->
        </shape>
    </item>
    <item android:drawable="@drawable/medicine1">
        <bitmap
            android:src="@drawable/medicine1"
            android:gravity="center"
            android:tileMode="disabled"
            android:dither="true"
            android:filter="true">
            <shape android:shape="rectangle">
                <corners android:radius="10dp"/> <!-- Adjust the radius to match the background -->
            </shape>
        </bitmap>
    </item><!-- Your image -->
</layer-list>
