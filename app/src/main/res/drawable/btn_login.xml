            <solid android:color="#FF6200EE" /> <!-- Màu nền khi nhấn -->
            <corners android:radius="8dp" /> <!-- Góc bo tròn -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/btn_login" /> <!-- Màu nền mặc định -->
            <corners android:radius="8dp" /> <!-- Góc bo tròn -->
            <stroke
                android:color="#FF3700B3" /> <!-- Viền -->
        </shape>
    </item>
</selector>